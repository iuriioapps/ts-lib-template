{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./lib/esm",
    "moduleResolution": "Node"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules/",
    "lib/",
    "test/"
  ],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "exclude": ["node_modules/**"],
    "moduleResolution": "node",
    "mode": "modules",
    "out": "docs"
  }
}
